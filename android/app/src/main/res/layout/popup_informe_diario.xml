<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pop_up">

    <!-- Botón de cerrar -->
    <ImageButton
        android:id="@+id/cerrar_popup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/icono_cerrar"
        app:tint="@color/negro"
        android:contentDescription="Cerrar Popup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/titulo_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe Diario"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cerrar_popup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenido -->
    <TextView
        android:id="@+id/contenido_popup"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="Aquí se mostrará tu informe diario."
        android:textColor="@color/negro"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/titulo_popup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>