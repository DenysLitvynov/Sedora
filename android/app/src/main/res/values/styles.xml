<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Heading 1 -->
    <style name="Heading1">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/negro</item>
    </style>

    <!-- Heading 2 -->
    <style name="Heading2">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/negro</item>
    </style>

    <!-- Heading 3 -->
    <style name="Heading3">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/negro</item>
    </style>

    <!-- Parrafos -->
    <style name="ParagraphGris">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gris</item>
    </style>

    <style name="ParagraphNegro">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/negro</item>
    </style>

    <style name="ParagraphNegrita">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/negro</item>
    </style>

    <style name="ParagraphBlanco">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@color/verde_secundario</item>
    </style>

    <!-- Estilo para Botones Verdes -->
    <style name="BotonVerde">
        <item name="android:background">@drawable/boton_verde</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:padding">0dp</item> <!-- Opcional: a침ade padding para el texto del bot칩n -->
    </style>

    <!-- Estilo para Botones Blancos con sombra -->
    <style name="BotonBlanco">
        <item name="android:backgroundTint">@color/blanco</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <!-- Agrega sombra con elevaci칩n -->
        <item name="android:elevation">4dp</item> <!-- Ajusta la cantidad de sombra -->
        <item name="android:translationZ">2dp</item> <!-- Sombra adicional cuando el bot칩n es presionado -->
    </style>

    <!-- Box Background -->
    <style name="BoxBackground">
        <item name="android:background">@drawable/box_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Box Background Este es sin el margen de 8dp-->
    <style name="BoxBackground2">
        <item name="android:background">@drawable/box_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Box Background Blanco -->
    <style name="BoxBackgroundblanco">
        <item name="android:background">@drawable/box_background_blanco</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo para Inputs -->
    <style name="Inputs">
        <item name="android:background">@drawable/borde_del_input</item>
        <item name="android:hint">@color/negro</item> <!-- Color del hint -->
        <item name="android:paddingStart">10dp</item> <!-- Espacio izquierdo -->
        <item name="android:paddingEnd">10dp</item> <!-- Espacio derecho -->
    </style>

</resources>